    { "command": "cp <src> <dst>", "description": "Copy file or directory" },
    { "command": "cp -r <src> <dst>", "description": "Copy directory recursively" }
  ],
  "list": [
    { "command": "ls", "description": "List files and directories" },
    { "command": "ls -l", "description": "List with detailed information" },
    { "command": "ls -a", "description": "List all files including hidden" }
  ],
  "search": [
    { "command": "find <dir> -name <pattern>", "description": "Search for files" },
    { "command": "grep <pattern> <file>", "description": "Search for text in a file" }
