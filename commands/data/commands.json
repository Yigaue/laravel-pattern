    { "command": "df -h", "description": "Display disk space usage" },
    { "command": "free -m", "description": "Display memory usage" },
    { "command": "uname -a", "description": "Display system information" }
  ],
  "archive": [
    { "command": "tar -cvf <archive.tar> <dir>", "description": "Create a tar archive" },
    { "command": "tar -xvf <archive.tar>", "description": "Extract a tar archive" },
    { "command": "zip <archive.zip> <file>", "description": "Create a zip archive" },
    { "command": "unzip <archive.zip>", "description": "Extract a zip archive" }
