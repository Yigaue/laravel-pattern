{
  "create": [
    { "command": "mkdir <dir>", "description": "Create a directory" },
    { "command": "touch <file>", "description": "Create a file" }
  ],
  "delete": [
    { "command": "rm <file>", "description": "Delete a file" },
    {
      "command": "rm -r <dir>",
      "description": "Delete a directory recursively"
    },
    { "command": "rm -rf <dir>", "description": "Force delete everything in directory" }
  ],
  "move": [
    { "command": "mv <src> <dst>", "description": "Move file or directory" }
  ],
