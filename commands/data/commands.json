  "network": [
    { "command": "ping <host>", "description": "Ping a host" },
    { "command": "curl <url>", "description": "Fetch a URL" },
    { "command": "wget <url>", "description": "Download a file from a URL" }
  ],
  "process": [
    { "command": "ps aux", "description": "List running processes" },
